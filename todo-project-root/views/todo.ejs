<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/static/css/style.css" type="text/css">
  <title>Todo List App</title>
  <!-- <script type="module" src="static/js/createElement.js"></script> -->
  
</head>

<body>

  <div class="alert-box">
    <div class="alert-success" id="success"></div>
    <div class="alert-error" id="error"></div>
  </div>

  <div class="container">
    <h1>To-Do List</h1>
    <div class="todos">
      <div class="todo-form">
        <form class="form" id="add-task-form">
          <input type="text" placeholder="Add a new task...." class="task-add-input" id="task-input" name="task" required>
          <button type="submit" class="add-button">
            <i class="fas fa-plus"></i>
            <span>Add</span>
          </button>
        </form>
      </div>
      <div class="todo-list">
        <ul class="a" id="task-list">
          <% if (todoTasks && todoTasks.length > 0) { %>
          <% todoTasks.forEach(task => { %>
          <li class="todo-list-item" id="task-item-<%= task.taskId %>">
            <span class="todo-list-item-name" id="task-name-<%= task.taskId %>"><%= task.taskName %></span>
            <!-- Edit Button -->
            <button type="button" id="edit-task-<%= task.taskId %>" data-task-id="<%= task.taskId %>" class="edit-button">
              <i class="fas fa-edit"></i>
              <span>Edit</span>
            </button>
            <!-- <form class="form" id="add-task-form-<%= task.taskId %>"> -->
              <!-- Input for editing the task name (pre-populated with taskName) -->
              <input type="text" id="task-input-<%= task.taskId %>" value="<%= task.taskName %>" class="task-list-input" name="task" required style="display:none">
              <!-- Save Button -->
              <button type="button" id="save-task-<%= task.taskId %>" data-task-id="<%= task.taskId %>" class="save-button" style="display:none">
                <i class="fas fa-save"></i>
                <span>Save</span>
              </button>
            <!-- </form> -->


            <!-- Remove Button -->
            <button type="button" id="delete-task-<%= task.taskId %>" onclick="handelDelete('<%= task.taskId %>')" class="remove-button">
              <i class="fas fa-times"></i>
              <span>Remove</span>
            </button>
          </li>
          <% }) %>
          <% } else { %>
          <li class="no-data">Data is not available</li>
          <% } %>
        </ul>

      </div>
    </div>
</body>
<script type="module" src="static/js/script.js"></script>
</html>